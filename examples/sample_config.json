{
  "embedding": {
    "model_name": "sentence-transformers/all-MiniLM-L6-v2",
    "dimension": 384,
    "device": "cpu",
    "batch_size": 32
  },
  "faiss": {
    "index_type": "IndexFlatIP",
    "index_path": "./faiss_index",
    "normalize_embeddings": true
  },
  "chunker": {
    "chunk_size": 1000,
    "chunk_overlap": 200,
    "separator": "\n\n",
    "keep_separator": true
  },
  "toxicity": {
    "model_name": "unitary/toxic-bert",
    "threshold": 0.7,
    "enabled": true
  },
  "llm": {
    "provider": "huggingface",
    "model_name": "microsoft/DialoGPT-medium",
    "temperature": 0.7,
    "max_tokens": 512,
    "api_key": null
  },
  "data_dir": "./data",
  "cache_dir": "./cache",
  "log_level": "INFO"
}